<?xml version="1.0" encoding="utf-8"?>
<!-- values-night/themes.xml - Dark Theme -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Dark) -->
    <style name="Theme.Omsetku" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_dark</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/black</item>

        <!-- Additional customizations -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>